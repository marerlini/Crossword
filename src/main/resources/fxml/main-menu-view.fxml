<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.MainMenuView"
      alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Обрати тему" style="-fx-font-size: 14;"/>
        <ComboBox fx:id="themeComboBox" prefWidth="200"/>
        <Button text="Створити тему" onAction="#onCreateTheme"/>
    </HBox>

    <VBox spacing="10" alignment="CENTER">
        <Label text="Слово" style="-fx-font-weight: bold;"/>
        <TextField fx:id="wordField" promptText="Введіть слово"/>

        <Label text="Підказка" style="-fx-font-weight: bold;"/>
        <TextField fx:id="hintField" promptText="Введіть підказку"/>

        <VBox fx:id="hintsContainer" spacing="5"/>
    </VBox>

    <HBox alignment="CENTER" spacing="10">
        <Label text="Кількість слів:"/>
        <Label fx:id="wordCountLabel" text="3"/>
    </HBox>

    <Button text="Згенерувати" onAction="#onGenerate" style="-fx-font-size: 16; -fx-pref-width: 200;"/>
</VBox>